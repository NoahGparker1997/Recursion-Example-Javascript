function sumRange(num)
{
  if(num === 1) return 1; // this is the base
  return num + sumRange(num-1);
}

 sumRange(3) // this is the input different from base
 
 
 // this is how the code above runs
 //   sumRange(3)
 //             return 3 + sumRange(2) 
 //                           return 2 + sumRange(1)
 //                                             return 1
